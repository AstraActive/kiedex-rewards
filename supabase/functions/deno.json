{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "lib": ["deno.window"]
  },
  "lint": {
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100
  }
}
